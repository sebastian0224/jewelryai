// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id // Clerk ID como primary key
  email     String @unique
  name      String?
  avatarUrl String?
  lastUsageReset DateTime? 
  // Plan info
  plan         String @default("free")
  monthlyUsage Int    @default(0)
  
  // Relations
  images ProcessedImage[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model ProcessedImage {
  id                 String    @id @default(cuid())
  userId             String
  cloudinaryUrl      String
  cloudinaryPublicId String?   // NUEVO: Para poder eliminar de Cloudinary
  styleUsed          String?
  sizeUsed           String?
  status             String    @default("saved") // NUEVO: "temporary" | "saved"
  expiresAt          DateTime? // NUEVO: Para cleanup automático de temporales
  savedAt            DateTime? // NUEVO: Timestamp cuando se guardó permanentemente
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // AGREGADO: faltaba en tu schema
  
  @@map("processed_images")
}